{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Nebula",
    "scopeName": "source.nebula",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#constants"
        },
        {
            "include": "#types"
        },
        {
            "include": "#storage"
        },
        {
            "include": "#builtins"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#functions"
        }
    ],
    "repository": {
        "comments": {
            "name": "comment.line.number-sign.nebula",
            "match": "#.*$"
        },
        "strings": {
            "name": "string.quoted.double.nebula",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.nebula",
                    "match": "\\\\."
                }
            ]
        },
        "numbers": {
            "name": "constant.numeric.nebula",
            "match": "\\b\\d+(\\.\\d+)?\\b"
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.nebula",
                    "match": "\\b(if|elsif|else|while|for|each|in|break|continue|match|try|catch|finally|await|async|spawn)\\b"
                },
                {
                    "name": "keyword.operator.word.nebula",
                    "match": "\\b(and|or|not)\\b"
                },
                {
                    "name": "keyword.other.fn.nebula",
                    "match": "\\b(function|fn|give|return)\\b"
                },
                {
                    "name": "keyword.control.block.nebula",
                    "match": "\\b(do|end)\\b"
                },
                {
                    "name": "keyword.control.module.nebula",
                    "match": "\\b(mod|use|export|as|trait|type)\\b"
                },
                {
                    "name": "keyword.control.error.nebula",
                    "match": "\\b(err|assert)\\b"
                },
                {
                    "name": "keyword.other.memory.nebula",
                    "match": "\\b(move|unsafe|inline|free)\\b"
                }
            ]
        },
        "constants": {
            "name": "constant.language.nebula",
            "match": "\\b(on|off|empty)\\b"
        },
        "types": {
            "name": "support.type.nebula",
            "match": "\\b(nb|int|fl|wrd|by|chr|any|void|lst|map|tup|set)\\b"
        },
        "storage": {
            "name": "storage.type.nebula",
            "match": "\\b(perm|struct|enum)\\b"
        },
        "builtins": {
            "name": "support.function.nebula",
            "match": "\\b(log|typeof|sqrt|abs|len|floor|ceil|round|pow|sin|cos|tan|exp|ln|get|rnd|dbg|now|sleep|str|num)\\b"
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.arrow.nebula",
                    "match": "(->|=>|<-|~>)"
                },
                {
                    "name": "keyword.operator.range.nebula",
                    "match": "(\\.\\.<|\\.\\.|\\.\\.)"
                },
                {
                    "name": "keyword.operator.compound.nebula",
                    "match": "(\\+\\+|\\+=|-=|\\*=|/=)"
                },
                {
                    "name": "keyword.operator.bitwise.nebula",
                    "match": "(<<|>>|\\^\\||&|\\||~)"
                },
                {
                    "name": "keyword.operator.comparison.nebula",
                    "match": "(==|!=|<=|>=|<|>)"
                },
                {
                    "name": "keyword.operator.arithmetic.nebula",
                    "match": "(\\+|-|\\*|/|%|\\^)"
                },
                {
                    "name": "keyword.operator.assignment.nebula",
                    "match": "="
                }
            ]
        },
        "functions": {
            "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
            "captures": {
                "1": {
                    "name": "entity.name.function.nebula"
                }
            }
        }
    }
}